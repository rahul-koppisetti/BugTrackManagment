@model RegisterViewModel

@{
    ViewBag.Title = "User Registration";
}

@{ 
    Layout = "";
}




<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.title</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/images/icon.ico" />
    <!--===============================================================================================-->
    <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/lib/animate.css/animate.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/lib/hamburgers/hamburgers.min.css" rel="stylesheet" />
    <!--===============================================================================================-->

    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/css/login_util.css" rel="stylesheet" />

    <link href="~/css/login_main.css" rel="stylesheet" />
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-form-title"><h1>BugTrack</h1></div>

                <div class="login100-pic js-tilt p-t-62" data-tilt>
                    <img src="~/images/login3.png" alt="IMG">
                </div>

                <div class="login100-form">
                    <form method="post" class="validate-form" autocomplete="new-user"  >
                        <span class="login100-form-title">
                            Register
                        </span>

                        <div class="wrap-input100 ">

                            <select asp-for="Department" class="input100 custom-select mr-sm-2"
                                    asp-items="Html.GetEnumSelectList<Dept>()">
                                <option class="input100" value="">Please Select</option>
                            </select>
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-users" aria-hidden="true"></i>
                            </span>
                            <span asp-validation-for="Department" class="text-danger"></span>

                        </div>

                        <div class="wrap-input100 ">
                            <input asp-for="Email" class="input100" type="text" placeholder="Email" autocomplete="new-user"  >
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </span>

                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>

                        <div class="wrap-input100 ">
                            <input asp-for="Password" class="input100" type="password" placeholder="Password"  autocomplete="new-password">
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-lock" aria-hidden="true"></i>
                            </span>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>

                        <div class="wrap-input100 ">
                            <input asp-for="ConfirmPassword" class="input100" type="password" placeholder="Confirm Password"  >
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-lock" aria-hidden="true"></i>
                            </span>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>


                        <div class="container-login100-form-btn">
                            <button type="submit" class="login100-form-btn ">
                                Register
                            </button>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>


                    </form>

                    <div class="text-center p-t-40">
                        Already have an Account?
                        <a asp-controller="account" asp-action="login" class="txt2">
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                            Login

                        </a>
                    </div>
                </div>
           

            </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <!--===============================================================================================-->
    <script src="~/lib/popper.js/umd/popper.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/lib/select2/js/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/lib/tilt.js/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src="~/js/login_main.js"></script>
</body>
</html>