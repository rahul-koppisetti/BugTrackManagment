@model IEnumerable<Bug>
@{
    ViewData["Title"] = "DashBoard";
}


   

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">
                    Tester Dashboard
                </h1>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content-header -->




<section class="content">

    <div class="container-fluid">


        <div class="row">




            <!--Active Bugs count-->

            <div class="col-lg-4 col-6">
                <!-- small box -->
                <div class="small-box bg-gradient-red">
                    <div id="" class="inner">
                        <h3>@ViewBag.AllIssues</h3>
                        <p>All Issues</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-bug"></i>
                    </div>
                    <a id="buglistlink" href="#bugslist" class="small-box-footer">Bugs List <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>




            <!--My Issues Count-->

            <div class="col-lg-4 col-6">
                <!-- small box -->
                <div class="small-box bg-cyan">
                    <div class="inner">
                        <h3>@ViewBag.MyIssues</h3>

                        <p>My Issues </p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-users-cog"></i>
                    </div>
                    <a asp-action="TesterIssues" asp-controller="Tester" class="small-box-footer">Full List <i class="fas fa-arrow-circle-right"></i></a>
                </div>
            </div>




            <!--Verify Queue -->

            <div class="col-lg-4 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@ViewBag.VeriyQ</h3>

                        <p>Verify Queue</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-list-ul"></i>
                    </div>
                    <a asp-action="VerifyQueue" asp-controller="tester" class="small-box-footer">
                        Full List
                        <i class="fas fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>






        </div>
        
        
        <div  id="bugslist"class="row">
            <!--bugslist-->
            <div id="Index_BugListViewComponent" class="col-lg-12 col-12" >
                <vc:index_bug-list ></vc:index_bug-list>
                     
            </div>
         </div>
    
        <div class="row">
            <div class="col-lg-6  col-12">
                <vc:my-issues is-full="true"></vc:my-issues>
            </div>


            <div class="col-lg-6  col-12">
               <vc:verify-q isfull="true"></vc:verify-q>
            </div>
        </div>
        

    </div>
    
</section>





       